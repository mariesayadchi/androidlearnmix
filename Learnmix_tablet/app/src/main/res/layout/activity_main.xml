<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView android:text="LearnMix"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_below="@+id/textView"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout1">

        <TextView android:text="@string/hello_world"

            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />


        <TextView android:text="Help"
            android:textStyle="bold"
            android:textColor="#040000"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:hint="Search" />

        <TextView android:text="Search"
            android:textStyle="bold"
            android:textColor="#040000"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView android:text="logout"
            android:textStyle="bold"
            android:textColor="#040000"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />



    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout_path">


        <TextView android:text="home"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <TextView android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_barrier1" />

        <TextView android:text="math"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <TextView android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_barrier2" />

        <TextView android:text="calculus"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearLayout_path"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout_description">

        <TextView android:text="Description"
            android:textStyle="bold"
            android:textColor="#040000"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_description" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="3"
            android:layout_alignTop="@+id/textView_description"

        android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText_description"
          />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearLayout_description"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout_subject">

        <TextView android:text="Subject"
            android:textStyle="bold"
            android:textColor="#040000"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_subject" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView"
    />

    </LinearLayout>


</RelativeLayout>
